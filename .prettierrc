{
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "printWidth": 80,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always",
    "importOrder": [
        "^[./]",
        "^@/components/(.*)$",
        "^@/hooks/(.*)$",
        "^@/interfaces/(.*)$",
        "^@/lib/(.*)$",
        "^@/services/(.*)$",
        "^@/stores/(.*)$",
        "^@/styles/(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
